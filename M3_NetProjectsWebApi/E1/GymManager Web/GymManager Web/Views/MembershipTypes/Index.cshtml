@model GymManager_Web.Model.MembershipTypesListModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="mt-5">Memberships</h1>

    <div class="row">
        <div class="col-6"><p>Available memberships: @Model.NewMembershipCount</p></div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-outline-success float-end">Add Membership</a>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/_MembershipList.cshtml", Model.Memberships)
</div>
